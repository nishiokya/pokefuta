# ==========================================
# Supabase Configuration
# ==========================================
# ✅ フロントエンドで使用OK (RLSで保護される)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# ⚠️ 絶対にフロントエンドで使用しない！API Routeでのみ使用
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ==========================================
# Cloudflare R2 Configuration
# ==========================================
# ⚠️ サーバーサイドのみ（画像はsigned URLで配信）
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_ENDPOINT=https://xxxxx.r2.cloudflarestorage.com
R2_BUCKET=your_bucket_name

# 注: 画像はsigned URL経由で配信されるため、公開URLは不要
# R2_PUBLIC_URL=（オプション・未使用）
# NEXT_PUBLIC_R2_PUBLIC_URL=（不要・削除推奨）

# ==========================================
# App Configuration
# ==========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ==========================================
# Map Configuration
# ==========================================
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LAT=36.0
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LNG=138.0

# ==========================================
# Optional: Rate Limiting (Upstash Redis)
# ==========================================
# UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=xxxxx
